# Dial-Craft CRM Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
NODE_ENV=production
PORT=3001

# Domain Configuration (Update with your actual domain)
FRONTEND_URL=https://your-subdomain.yourdomain.com
BACKEND_URL=https://your-subdomain.yourdomain.com/api

# Database Configuration
DATABASE_URL=file:./dev.db

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration (Add your domains)
ALLOWED_ORIGINS=https://your-subdomain.yourdomain.com,https://yourdomain.com

# Security Settings
FORCE_HTTPS=true
SECURE_COOKIES=true

# Optional: External Service URLs
# WEBHOOK_URL=https://your-webhook-endpoint.com
# ANALYTICS_URL=https://your-analytics-service.com

# Development Settings (Remove in production)
# ENABLE_DEBUG_LOGS=false
# ENABLE_SWAGGER=false